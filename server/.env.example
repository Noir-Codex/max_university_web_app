# Сервер
PORT=3001
NODE_ENV=development

# База данных PostgreSQL
DB_USER=
DB_HOST=
DB_NAME=
DB_PASSWORD=
DB_PORT=

# Путь к SSL сертификату (относительно домашней директории)
DB_SSL_CERT_PATH=.cloud-certs/root.crt

# JWT секрет для токенов
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Telegram Bot Token (для валидации initData)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# CORS
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,https://t.me

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Логирование
LOG_LEVEL=debug
